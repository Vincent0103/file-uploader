generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  entity   Entity[]
}

model Entity {
  id   Int    @id @default(autoincrement())
  name String
  file File?

  user   User @relation(fields: [userId], references: [id])
  userId Int

  predecessorId Int?
  predecessor   Entity?  @relation("FolderTree", fields: [predecessorId], references: [id])
  successor     Entity[] @relation("FolderTree")
}

model File {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  size        Int
  storagePath String
  extension   String
  // uploadTime in milliseconds
  uploadTime  Int
  entity      Entity   @relation(fields: [entityId], references: [id], onDelete: Cascade)
  entityId    Int      @unique
}
