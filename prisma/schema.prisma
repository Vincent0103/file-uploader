generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  entity   Entity[]
}

model Entity {
  id            Int      @id @default(autoincrement())
  name          String
  userId        Int
  predecessorId Int?
  predecessor   Entity?  @relation("FolderTree", fields: [predecessorId], references: [id])
  successor     Entity[] @relation("FolderTree")
  user          User     @relation(fields: [userId], references: [id])
  file          File?
}

model File {
  id         Int      @id @default(autoincrement())
  size       Int
  extension  String
  entityId   Int      @unique
  uploadTime Int
  createdAt  DateTime @default(now())
  entity     Entity   @relation(fields: [entityId], references: [id], onDelete: Cascade)
}
