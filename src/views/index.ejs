<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | File Uploader</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    style="background-image: linear-gradient(135deg, #0c0704, #432622)"
    class="font-inter m-0 flex h-screen w-screen items-center justify-center p-5 text-white"
  >
    <div
      class="absolute inset-0 -z-10 size-full bg-[url(/images/body-wallpaper.jpg)] bg-cover bg-center"
    ></div>
    <div
      class="flex size-full flex-col overflow-hidden rounded-2xl border-1 border-zinc-700 shadow-xl"
    >
      <nav
        class="flex w-full justify-between border-b-1 border-zinc-700 bg-zinc-900 p-3"
      >
        <div class="flex items-center space-x-2">
          <div class="rounded-xl border-2 border-amber-800 bg-amber-950 p-1.5">
            <i class="size-4 text-amber-100" data-lucide="dock"></i>
          </div>
          <h2 class="font-semibold">File Uploader</h2>
        </div>
        <div
          class="flex cursor-pointer items-center space-x-2 rounded-md bg-zinc-800 px-2 py-1 text-sm text-white hover:bg-zinc-700"
        >
          <i class="size-4" data-lucide="log-out"></i>
          <a href="/logout">Log Out</a>
        </div>
      </nav>
      <main class="flex h-full">
        <%- include("partials/leftSidebar.ejs", { user, sidebarFolders }) %>
        <section class="flex size-full flex-col bg-zinc-800 p-2">
          <nav class="font-light text-zinc-400">
            <small>
              <% nodes.forEach((node, index) => { %>
              <span class="hover:text-zinc-300">
                <a href="/folder/<%= node.folderId %>"><%= node.name %></a>
                <% if (index < nodes.length - 1) { %> &gt; <% } %>
              </span>
              <% }) %>
            </small>
          </nav>
          <div class="flex flex-col">
            <div class="flex gap-2 p-2">
              <button
                data-entity-type="folder"
                type="button"
                class="folder open-popup-button flex cursor-pointer items-center gap-3 rounded-md border-1 border-zinc-700 bg-zinc-900 px-3 py-1.5 hover:bg-zinc-800"
              >
                <i class="size-4" data-lucide="folder-plus"></i>
                <span>New Folder</span>
              </button>
              <button
                data-entity-type="file"
                type="button"
                class="file open-popup-button flex cursor-pointer items-center gap-3 rounded-md border-1 border-zinc-700 bg-zinc-900 px-3 py-1.5 hover:bg-zinc-800"
              >
                <i class="size-4" data-lucide="file-plus"></i>
                <span>New File</span>
              </button>
            </div>
            <% if (locals.entities) { %>
            <div class="flex flex-wrap gap-2">
              <% entities.forEach((entity) => { %> <%-
              include("partials/entityItem.ejs", { entityName: entity.name,
              entityId: entity.id, mimetype: entity.file?.extension, entityType:
              entity.file ? "file" : "folder" }) %> <% }) %>
            </div>
            <% } %>
          </div>
        </section>
      </main>
    </div>
    <%- include("partials/folderPopup.ejs", { ...popups.folder, isVisible:
    locals.hasPopupFolderErrors, parentFolderId}) %> <%-
    include("partials/filePopup.ejs", { ...popups.file, isVisible:
    locals.hasPopupFileErrors, parentFolderId }) %>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
      lucide.createIcons();
    </script>
    <script type="module" src="/scripts/index.js"></script>
  </body>
</html>
