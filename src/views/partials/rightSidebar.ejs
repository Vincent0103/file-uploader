<aside
  id="right-sidebar"
  class="top-0 right-0 z-10 hidden h-full w-2/7 flex-col overflow-auto border-l border-zinc-800 bg-zinc-900 p-6 shadow-lg"
>
  <div class="mb-4 flex items-center justify-between">
    <h2 class="text-lg font-semibold text-white">File Details</h2>
    <button
      class="close-button text-zinc-400 hover:text-zinc-200"
      aria-label="Close"
    >
      <i data-lucide="x" class="size-5"></i>
    </button>
  </div>
  <div class="flex flex-col gap-3 text-zinc-200">
    <div class="my-5">
      <img
        id="file-details-icon"
        class="mx-auto h-full max-h-80"
        src="/images/document.svg"
        alt=""
      />
    </div>
    <div class="box-content flex gap-1">
      <span class="font-medium">Name:</span>
      <p class="w-54 break-words" id="file-details-name">
        <%= file?.name || "-" %>
      </p>
    </div>
    <div>
      <span class="font-medium">Size:</span>
      <span id="file-details-size"
        ><%= file?.size ? (file.size / 1024).toFixed(2) + ' KB' : "-" %></span
      >
    </div>
    <div>
      <span class="font-medium">Extension:</span>
      <span id="file-details-extension"><%= file?.extension || "-" %></span>
    </div>
    <div>
      <span class="font-medium">created at:</span>
      <span id="file-details-created-at"
        ><%= file?.createdAt ? file.createdAt.toLocaleString() : "-" %></span
      >
    </div>
    <div>
      <span class="font-medium">Upload time:</span>
      <span id="file-details-upload-time"><%= file?.uploadTime || "-" %></span>
    </div>
  </div>
  <div class="mt-6">
    <% if (file && file.downloadPath) { %>
    <a
      href="<%= file.downloadPath %>"
      download
      class="flex w-full items-center justify-center gap-2 rounded-md bg-amber-500 px-4 py-2 text-center text-sm font-semibold text-white transition-colors hover:bg-amber-600"
    >
      <i class="size-5" data-lucide="download"></i>
      <span>Download</span>
    </a>
    <% } else { %>
    <button
      class="flex w-full cursor-not-allowed items-center justify-center gap-2 rounded-md bg-zinc-700 px-4 py-2 text-sm font-semibold text-zinc-400"
      disabled
    >
      <i class="size-5" data-lucide="download"></i>
      <span>Download</span>
    </button>
    <% } %>
  </div>
</aside>
