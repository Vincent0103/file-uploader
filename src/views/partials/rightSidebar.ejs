<aside
  id="right-sidebar"
  class="absolute z-10 hidden flex-col overflow-y-auto bg-zinc-900 p-6 max-sm:inset-0 sm:static sm:border-l sm:border-zinc-800 sm:shadow-lg md:min-w-[300px] lg:min-w-[350px]"
>
  <div class="flex items-center justify-between">
    <h2 class="text-lg font-semibold text-white">File Details</h2>
    <button
      class="close-button text-zinc-400 hover:text-zinc-200"
      aria-label="Close"
    >
      <i data-lucide="x" class="size-5"></i>
    </button>
  </div>
  <div class="my-6 flex flex-col gap-3 text-zinc-200">
    <div class="my-4">
      <img
        id="file-details-icon"
        class="mx-auto h-full max-h-70"
        src="/images/file.svg"
        alt=""
      />
    </div>
    <div class="flex gap-1">
      <span class="font-medium">Name:</span>
      <p class="w-full break-all" id="file-details-name">
        <%= file?.name || "-" %>
      </p>
    </div>
    <div>
      <span class="font-medium">Size:</span>
      <span id="file-details-size"
        ><%= file?.size ? (file.size / 1024).toFixed(2) + ' KB' : "-" %></span
      >
    </div>
    <div>
      <span class="font-medium">Extension:</span>
      <span id="file-details-extension"><%= file?.extension || "-" %></span>
    </div>
    <div>
      <span class="font-medium">created at:</span>
      <span id="file-details-created-at"
        ><%= file?.createdAt ? file.createdAt.toLocaleString() : "-" %></span
      >
    </div>
    <div>
      <span class="font-medium">Upload time:</span>
      <span id="file-details-upload-time"><%= file?.uploadTime || "-" %></span>
    </div>
    <div class="mt-3">
      <a
        id="file-details-download-link"
        class="flex w-full items-center justify-center gap-2 rounded-md bg-amber-500 px-4 py-2 text-sm font-semibold text-white transition-colors hover:bg-amber-600 disabled:cursor-not-allowed disabled:bg-zinc-700 disabled:text-zinc-400"
      >
        <i class="size-5" data-lucide="download"></i>
        <span>Download</span>
      </a>
    </div>
  </div>
</aside>
