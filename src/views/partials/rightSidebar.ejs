<aside
  id="right-sidebar"
  class="top-0 right-0 z-10 flex hidden h-full w-80 flex-col border-l border-zinc-800 bg-zinc-900 p-6 shadow-lg"
>
  <div class="mb-4 flex items-center justify-between">
    <h2 class="text-lg font-semibold text-white">File Details</h2>
    <button
      class="close-button text-zinc-400 hover:text-zinc-200"
      aria-label="Close"
    >
      <i data-lucide="x" class="size-5"></i>
    </button>
  </div>
  <div class="flex flex-col gap-3 text-zinc-200">
    <div>
      <img
        id="file-details-icon"
        class="mx-auto w-44"
        src="/images/document.svg"
        alt=""
      />
    </div>
    <div class="block flex gap-1">
      <span class="font-medium">Name:</span>
      <p class="w-full truncate text-ellipsis" id="file-details-name">
        <%= file?.name || "-" %>
      </p>
    </div>
    <div>
      <span class="font-medium">Size:</span>
      <span id="file-details-size"
        ><%= file?.size ? (file.size / 1024).toFixed(2) + ' KB' : "-" %></span
      >
    </div>
    <div>
      <span class="font-medium">Extension:</span>
      <span id="file-details-extension"><%= file?.extension || "-" %></span>
    </div>
    <div>
      <span class="font-medium">Uploaded:</span>
      <span id="file-details-uploaded"
        ><%= file?.createdAt ? file.createdAt.toLocaleString() : "-" %></span
      >
    </div>
  </div>
  <div class="mt-6">
    <% if (file && file.downloadPath) { %>
    <a
      href="<%= file.downloadPath %>"
      download
      class="inline-block w-full rounded-md bg-amber-500 px-4 py-2 text-center text-sm font-semibold text-white transition-colors hover:bg-amber-600"
    >
      Download
    </a>
    <% } else { %>
    <button
      class="w-full cursor-not-allowed rounded-md bg-zinc-700 px-4 py-2 text-sm font-semibold text-zinc-400"
      disabled
    >
      Download
    </button>
    <% } %>
  </div>
</aside>
