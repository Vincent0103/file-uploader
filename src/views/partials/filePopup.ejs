<section
  class="file popup-container pointer-events-none absolute inset-0 z-30 size-full bg-black/70 px-3 opacity-0 backdrop-blur-sm transition-opacity"
>
  <style>
    progress {
      box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
    }

    progress::-webkit-progress-bar {
      background-color: #f97316;
    }

    progress::-webkit-progress-value {
      background-color: #f97316;

      box-shadow: 1px 1px 5px 3px #f97316;
    }

    progress::-moz-progress-bar {
      background-color: #f97316;

      box-shadow: 1px 1px 5px 3px #f97316;
    }
  </style>
  <div class="flex h-full w-full items-center justify-center">
    <form
      action="<%= path %>"
      method="POST"
      enctype="multipart/form-data"
      class="popup flex w-[400px] translate-y-8 scale-75 flex-col rounded-md border-1 border-zinc-700 bg-zinc-800 p-4 transition-transform duration-200"
    >
      <div class="mb-2 flex items-center justify-between">
        <h3 class="title text-lg font-semibold"><%= title %></h3>
        <button
          class="close-button cursor-pointer"
          aria-label="Close"
          type="button"
        >
          <i class="size-5 rounded-md hover:text-zinc-500" data-lucide="x"></i>
        </button>
      </div>
      <input
        aria-label="Upload File"
        type="file"
        name="uploadedFile"
        id="uploadedFile"
        accept="*"
        class="mt-2 w-full rounded-md border-1 border-zinc-700 bg-zinc-900 p-2 text-sm placeholder:text-zinc-500 focus:border-amber-500 focus:outline-none disabled:text-zinc-500 disabled:opacity-50 disabled:hover:cursor-not-allowed"
      />
      <small class="mt-1 text-zinc-400"><i>Max file size: 10MB</i></small>
      <div id="file-name-container" class="my-3 hidden">
        <label class="text-zinc-200" for="filename">File name</label>
        <input
          name="filename"
          id="filename"
          aria-label="File Name"
          placeholder="File Name"
          type="text"
          minlength="1"
          minlength="255"
          class="mt-2 w-full rounded-md border-1 border-zinc-700 bg-zinc-900 p-2 text-sm text-white placeholder:text-zinc-500 focus:border-amber-500 focus:outline-none"
        />
      </div>
      <input
        type="hidden"
        name="parentFolderId"
        id="parentFolderId"
        value="<%= parentFolderId %>"
      />
      <div
        class="mt-4 hidden items-center justify-center gap-2 rounded-md bg-zinc-900 p-2 text-sm text-amber-500"
        id="uploading-indicator"
      >
        <i class="size-5 animate-spin" data-lucide="loader-pinwheel"></i>
        <span class="font-semibold">Uploading...</span>
      </div>
      <div class="mt-4 flex justify-end">
        <button
          data-crud-type="<%= CRUDType %>"
          type="submit"
          class="cursor-pointer rounded-md bg-amber-500 px-4 py-2 text-sm font-semibold text-white hover:bg-amber-600"
        >
          <%= submitButtonName %>
        </button>
      </div>
    </form>
  </div>
</section>
