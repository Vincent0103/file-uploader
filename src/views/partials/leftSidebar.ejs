<section
  class="flex h-full w-1/6 max-w-[300px] min-w-[220px] flex-col gap-2 border-r-1 border-zinc-700 bg-zinc-900 p-3"
>
  <div
    class="flex items-center gap-3 rounded-lg border-1 border-[#973c00] bg-[#461901] p-1.5 pl-3 text-lg font-semibold text-amber-100"
  >
    <span><%= user.username %>'s folders</span>
  </div>
  <hr class="my-2 border-zinc-700" />
  <% sidebarFolders.forEach(({folderId, name, iconName}) => { %>
  <a
    href="/folder/<%= folderId %>"
    class="flex cursor-pointer items-center gap-3 rounded-md p-1.5 pl-3 hover:bg-zinc-800"
  >
    <i class="size-4" data-lucide="<%= iconName %>"></i>
    <span><%= name %></span>
  </a>
  <% }) %>
</section>
