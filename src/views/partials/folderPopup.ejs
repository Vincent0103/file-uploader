<section
  class="folder popup-container pointer-events-none absolute inset-0 z-30 size-full bg-black/70 opacity-0 backdrop-blur-sm transition-opacity"
>
  <div class="flex h-full w-full items-center justify-center">
    <form
      action="<%= path %>"
      method="POST"
      class="popup flex w-[400px] translate-y-8 scale-75 flex-col rounded-md border-1 border-zinc-700 bg-zinc-800 p-4 transition-transform duration-200"
    >
      <div class="mb-2 flex items-center justify-between">
        <h3 class="title text-lg font-semibold"><%= title %></h3>
        <button class="close-button" aria-label="Close" type="button">
          <i
            class="size-5 cursor-pointer rounded-md hover:text-zinc-500"
            data-lucide="x"
          ></i>
        </button>
      </div>
      <input
        aria-label="folderName"
        placeholder="Folder Name"
        name="folderName"
        id="folderName"
        type="text"
        minlength="1"
        minlength="255"
        class="mt-2 w-full rounded-md border-1 border-zinc-700 bg-zinc-900 p-2 text-sm text-white placeholder:text-zinc-500 focus:border-amber-500 focus:outline-none"
      />
      <input
        type="hidden"
        name="parentFolderId"
        id="parentFolderId"
        value="<%= parentFolderId %>"
      />
      <div class="mt-4 flex justify-end">
        <button
          type="submit"
          class="cursor-pointer rounded-md bg-amber-500 px-4 py-2 text-sm font-semibold text-white hover:bg-amber-600"
        >
          <%= submitButtonName %>
        </button>
      </div>
    </form>
  </div>
</section>
